<article>
  <a href="/views/dashboard.handlebars"> &larr; Back to dashboard</a>
  <h2>
    Edit forum
  </h2>
  <form class="edit-forum-form">
    <div>
      <input name="title" type="text" value="{{ title }}" />
      <span>({{ initial_message }})</span>
    </div>
    <div>
      {{favorites}} by you on {{created_at}}
      |
      <a href="/forum/{{id}}"></a>
    </div>
    <button type="submit">Save forum</button>
    <button type="button" class="delete-forum-btn">Delete forum</button>
  </form>
</article>

<form class="forum-form">
  <div>
    <textarea name="forum-body"></textarea>
  </div>
  
  <div>
    <button type="submit">add post</button>
  </div>
</form>

{{> forum-info }}

<script src="/public/javascript/forum-edit.js"></script>
<script src="/public/javascript/forum-delete.js"></script>