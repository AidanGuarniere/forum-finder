<article class="tomato">
  <div class="title">
    {{!-- <a href="{{tomato.tomato_url}}" target="_blank">{{tomato.title}}</a>
    <span>({{tomato.tomato_url}})</span> --}}
  </div>
  <div class="meta">
    {{tomato.vote_count}} point(s) by {{tomato.user.username}} on
    {{tomato.created_at}}
    |
    <a href="/tomato/{{tomato.id}}">{{tomato.comments.length}} comment(s)</a>
  </div>

  <form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
    <button type="button" class="upvote-btn">upvote</button>
  </div>
</form>

<div class="comments">
  {{#each tomato.comments}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>
</article>

{{#if loggedIn}}
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
    <button type="button" class="upvote-btn">upvote</button>
  </div>
</form>
{{/if}}


{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
<script src="/javascript/upvote.js"></script>
{{/if}}